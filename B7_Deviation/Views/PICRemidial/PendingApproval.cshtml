
@{
    ViewBag.Title = "DataTableList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/Styles/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="~/Content/Styles/js/jquery.dataTables.min.js" defer></script>

<body>
    <div class="content-body">
        <div class="container-fluid">
            <div class="card">

                <div class="card-body">
                    <div class="form-group">
                        <h2 class="d-inline">Pending Approval</h2>

                    </div>
                    <table class="table table-striped table-bordered zero-configuration table-responsive" id="deviationdatatable" width="100%">
                        <thead>
                            <tr>
                                <th width="100px">Action</th>
                                <th width="100px">Request ID</th>
                                <th width="100px">Status</th>
                                <th width="100px">Keterangan Disposisi</th>
                                <th width="100px">Keterangan PIC</th>
                                <th width="100px">NIK PIC</th>
                                <th width="100px">Nama PIC</th>
                                <th width="100px">Keterangan Reject</th>
                                <th width="100px">Revisi Due Date</th>
                            </tr>
                        </thead>
                        <tbody id="deviationtable" class="nowrap">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            // Load User once the page is loaded
            LoadData();

        });

        function LoadData() {

            var userid = '@Request.RequestContext.HttpContext.Session["xUser"]';
            var reqid = @ViewBag.nomor;
            var dto = {
                IDUSER: userid,
                REQID: reqid
            }

            $.ajax({
                url: "../PICRemidial/PIC_LoadDataTable",
                type: "post",
                data: JSON.stringify(dto),
                dataType: "json",
                contentType: "application/json;charset=utf-8",
                success: function (data) {
                    var trHTML = '';
                    var trav = 0;
                    var Count = data.length;
                    for (trav = 0; trav < Count; trav++) {

                        
                        if (data[trav].USER_ID == data[trav].PIC_REMEDIAL_NIK) {

                            // KALAU ASSIGNED, BRARTI BISA ISI / MINTA REVISI
                            if (data[trav].FLAG_PIC == 'ASSIGNED') {
                                trHTML +=
                                    '<tr><td style="text-align:center"><input value="Select" onclick="Open(this)" type="button" class="btn btn-success"/>' +
                                    '<td>' + data[trav].REQ_ID + '</td>' +
                                    '<td> Pending Submission </td>' +
                                    '<td>' + data[trav].KETERANGAN_DISPOSISI + '</td>' +
                                    '<td>' + data[trav].HASIL_TINDAKAN + '</td>' +
                                    '<td>' + data[trav].PIC_REMEDIAL_NIK + '</td>' +
                                    '<td>' + data[trav].PIC_REMEDIAL_NAME + '</td>' +
                                    '<td>' + data[trav].ALASAN_REJECT_SPV + '</td>' +
                                    '<td style="text-align:center;"><input value="Revisi Due Date" onclick="Revisi(this, ' + data[trav].NO_DISPOSISI+')" type="button" class="btn btn-danger"/>';

                                // BISANYA ISI DOANG
                            } else if (
                                data[trav].FLAG_PIC == 'REMEDIAL REJECTED BY COORDINATOR' ||
                                data[trav].FLAG_PIC == 'REMEDIAL REJECTED BY SPV PIC' ||
                                data[trav].FLAG_PIC == 'PROPOSAL REJECTED BY SPV PIC' ||
                                data[trav].FLAG_PIC == 'PROPOSAL APPROVED BY MANAGER' ||
                                data[trav].FLAG_PIC == 'PROPOSAL REJECTED BY MANAGER' ||
                                data[trav].FLAG_VERIFIKASI == 'REJECTED'
                            ) {
                                trHTML +=
                                    '<tr><td style="text-align:center"><input value="Select" onclick="Open(this)" type="button" class="btn btn-success"/>' +
                                    '<td>' + data[trav].REQ_ID + '</td>' +
                                    '<td> Pending Submission </td>' +
                                    '<td>' + data[trav].KETERANGAN_DISPOSISI + '</td>' +
                                    '<td>' + data[trav].HASIL_TINDAKAN + '</td>' +
                                    '<td>' + data[trav].PIC_REMEDIAL_NIK + '</td>' +
                                    '<td>' + data[trav].PIC_REMEDIAL_NAME + '</td>' +
                                    '<td>' + data[trav].ALASAN_REJECT_SPV + '</td>' +
                                    '<td> N/A </td>'

                                // KALAU UDAH ISI / MINTA REVISI, STATUSNYA PENDING DAN GABISA NGAPA2IN
                            } else if (data[trav].FLAG_PIC == 'SUBMITTED' || data[trav].FLAG_PIC == 'REVISI DUE DATE') {
                                trHTML +=
                                    '<tr><td> N/A </td>' +
                                    '<td>' + data[trav].REQ_ID + '</td>' +
                                    '<td> Pending Approval </td>' +
                                    '<td>' + data[trav].KETERANGAN_DISPOSISI + '</td>' +
                                    '<td>' + data[trav].HASIL_TINDAKAN + '</td>' +
                                    '<td>' + data[trav].PIC_REMEDIAL_NIK + '</td>' +
                                    '<td>' + data[trav].PIC_REMEDIAL_NAME + '</td>' +
                                    '<td>' + data[trav].ALASAN_REJECT_SPV + '</td>' +
                                    '<td> N/A </td>'
                            }

                            // LIST OF OTHER'S PIC
                        } else {
                            if (data[trav].FLAG_PIC == 'ASSIGNED') {
                                trHTML +=
                                    '<tr><td> N/A </td>' +
                                    '<td>' + data[trav].REQ_ID + '</td>' +
                                    '<td> Pending Submission </td>' +
                                    '<td>' + data[trav].KETERANGAN_DISPOSISI + '</td>' +
                                    '<td>' + data[trav].HASIL_TINDAKAN + '</td>' +
                                    '<td>' + data[trav].PIC_REMEDIAL_NIK + '</td>' +
                                    '<td>' + data[trav].PIC_REMEDIAL_NAME + '</td>' +
                                    '<td>' + data[trav].ALASAN_REJECT_SPV + '</td>' +
                                    '<td> N/A </td>';

                                // BISANYA ISI DOANG
                            } else if (
                                data[trav].FLAG_PIC == 'REMEDIAL REJECTED BY COORDINATOR' ||
                                data[trav].FLAG_PIC == 'REMEDIAL REJECTED BY SPV PIC' ||
                                data[trav].FLAG_PIC == 'PROPOSAL REJECTED BY SPV PIC' ||
                                data[trav].FLAG_PIC == 'PROPOSAL APPROVED BY MANAGER' ||
                                data[trav].FLAG_PIC == 'PROPOSAL REJECTED BY MANAGER'
                            ) {
                                trHTML +=
                                    '<tr><td> N/A </td>' +
                                    '<td>' + data[trav].REQ_ID + '</td>' +
                                    '<td> Pending Submission </td>' +
                                    '<td>' + data[trav].KETERANGAN_DISPOSISI + '</td>' +
                                    '<td>' + data[trav].HASIL_TINDAKAN + '</td>' +
                                    '<td>' + data[trav].PIC_REMEDIAL_NIK + '</td>' +
                                    '<td>' + data[trav].PIC_REMEDIAL_NAME + '</td>' +
                                    '<td>' + data[trav].ALASAN_REJECT_SPV + '</td>' +
                                    '<td> N/A </td>'

                                // KALAU UDAH ISI / MINTA REVISI, STATUSNYA PENDING DAN GABISA NGAPA2IN
                            } else if (data[trav].FLAG_PIC == 'SUBMITTED' || data[trav].FLAG_PIC == 'REVISI DUE DATE') {
                                trHTML +=
                                    '<tr><td> N/A </td>' +
                                    '<td>' + data[trav].REQ_ID + '</td>' +
                                    '<td> Pending Approval </td>' +
                                    '<td>' + data[trav].KETERANGAN_DISPOSISI + '</td>' +
                                    '<td>' + data[trav].HASIL_TINDAKAN + '</td>' +
                                    '<td>' + data[trav].PIC_REMEDIAL_NIK + '</td>' +
                                    '<td>' + data[trav].PIC_REMEDIAL_NAME + '</td>' +
                                    '<td>' + data[trav].ALASAN_REJECT_SPV + '</td>' +
                                    '<td> N/A </td>'
                            }

                        }
                    }

                    $('#deviationdatatable').DataTable().clear().destroy();
                    $('#deviationtable').empty();
                    $('#deviationtable').append(trHTML);
                    $('#deviationdatatable').DataTable({
                        "searching": false,
                        "paging": false,
                        "info": false,
                        "ordering": false
                    });

                },
                error: function (ex) {
                    alert(JSON.stringify(ex));
                }
            });
        }

        function Open(button) {
            var row = $(button).closest("TR");

            var Nomor = $("TD", row).eq(1).html();
            window.open("../PICRemidial/PICHeader?Nomor=" + Nomor);
        }

        function Revisi(button, no_disposisi) {
            
            var row = $(button).closest("TR");

            var Nomor = $("TD", row).eq(1).html();
            window.open("../PICRemidial/UsulanRevisi?Nomor=" + Nomor + "&Urutan=" + no_disposisi);
        }

    </script>

</body>

