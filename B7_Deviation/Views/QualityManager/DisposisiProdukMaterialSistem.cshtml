				}

			}, error: function (ex) {
				alert(JSON.stringify(ex));
			}
		});

        $.ajax({
            url: "../Koordinator/LoadEvaluasiResiko",
            type: "post",
            dataType: "json",
            data: JSON.stringify(dto),
