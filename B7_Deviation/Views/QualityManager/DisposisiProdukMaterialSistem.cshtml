                            '<td>' + data[trav].TESTING_COST_OF_ANALYSIS + '</td>' +
                            '<td>' + data[trav].PROC_DURASI_PENGERJAAN + '</td>' +
                            '<td>' + data[trav].PROC_JUMLAH_PELAKSANA + '</td>' +
