
@{
    ViewBag.Title = "PICProposal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/Styles/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="~/Content/Styles/js/jquery.dataTables.min.js" defer></script>

<body>
    <div class="content-body">

        <div class="container-fluid">
            <div class="card">
                
                <div class="card-body">
                    <div class="form-group">
                        <h2 class="d-inline">Pending Approval Revisi Tindakan/Due Date</h2>
                    </div>
                    <table class="table table-striped table-bordered zero-configuration nowrap table-responsive" id="deviationdatatable" width="100%">
                        <thead>
                            <tr>
                                <th>Request ID</th>
                                <th>NIK PIC</th>
                                <th>PIC Name</th>
                                <th>Due Date</th>
                                <th>Keterangan Disposisi</th>
                                <th>Proposed Due Date</th>
                                <th>Proposed Keterangan Disposisi</th>
                                <th>Alasan Revisi</th>
                                <th width="100px" hidden></th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody id="deviationtable" class="nowrap">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            // Load User once the page is loaded
            LoadData();

        });

        function LoadData() {

            var REQID = @ViewBag.nomor;
            var curr_user = '@Request.RequestContext.HttpContext.Session["xUser"]';


            var dto = {
                REQID: REQID,
                IDUSER: curr_user
            }

            $.ajax({
                url: "../QualityManager/QM_PICLoadDataTable",
                type: "post",
                data: JSON.stringify(dto),
                dataType: "json",
                contentType: "application/json;charset=utf-8",
                success: function (data) {
                    console.log(data);
                    var trHTML = '';
                    var trav = 0;
                    var Count = data.length;
                    for (trav = 0; trav < Count; trav++) {
                        var revisiDueDate = data[trav].REVISI_DUE_DATE;
                        var revisiTindakan = data[trav].REVISI_TINDAKAN_REMEDIAL;
                        if (revisiDueDate == null) {
                            revisiDueDate = '-';
                        }
                        if (revisiTindakan == null) {
                            revisiTindakan = '-';
                        }
                        trHTML +=
                            '<tr><td>' + data[trav].REQ_ID + '</td>' +
                            '<td>' + data[trav].PIC_REMEDIAL_NIK + '</td>' +
                            '<td>' + data[trav].PIC_REMEDIAL_NAME + '</td>' +
                            '<td>' + data[trav].DUE_DATE + '</td>' +
                            '<td>' + data[trav].KETERANGAN_DISPOSISI + '</td>' +
                            '<td>' + revisiDueDate + '</td>' +
                            '<td>' + revisiTindakan + '</td>' +
                            '<td>' + data[trav].ALASAN_REVISI + '</td>' +
                            '<td hidden>' + data[trav].NO_DISPOSISI + '</td>' +
                            '<td align="center"> <input type="button" id="ApprovePIC" value="Approve Proposal" onclick=ApprovePIC(this) class="btn btn-success" style="width:120px;"/> <input type="button" id="Reject" value="Reject" onclick=RejectPIC(this) class="btn btn-danger" style="width:100px;"/></td>';
                    }
                    if (Count > 0) {
                        $('#deviationtable').empty();
                        $('#deviationtable').append(trHTML);
                        $('#deviationdatatable').DataTable();
                    }
                    else {
                        window.location.href = "../DataDeviasi/PendingTask"
                    }
                    

                },
                error: function (ex) {
                    GetErrorQMAppProp("PICPropQM_PICLoadDataTable", JSON.stringify(ex));
                }
            });
        }

        function ApprovePIC(button) {

            var row = $(button).closest("TR");

            var no_disposisi = $("TD", row).eq(8).html();
            var req_id = @ViewBag.nomor;
            var curr_user = '@Request.RequestContext.HttpContext.Session["xUser"]';


            function ApproveProposal() {
                var dto = {
                    REQID: req_id,
                    NO_DISPOSISI: no_disposisi,
                    IDUSER: curr_user
                }

                $.ajax({
                    url: "../QualityManager/QM_ApprovePIC",
                    type: "post",
                    dataType: "json",
                    data: JSON.stringify(dto),
                    contentType: "application/json;charset=utf-8",
                    success: function (data) {

                        Swal.fire({
                            title: 'Revisi Disposisi Approved',
                            icon: 'success',
                            showConfirmButton: false,
                            timer: 3000
                        }).then(() => {
                            LoadData()
                        });
                    }
                    , error: function (ex) {
                        GetErrorQMAppProp("PICPropApprove", JSON.stringify(ex));
                    }
                });
            }
            
            function NotifyProposal() {
                var receiver = $("TD", row).eq(8).html();
                var tabletype = "One";
                var whoreceiver = "Reviewer Approved Usulan Revisi by QM";

                var dto = {
                    Receiver: receiver,
                    ReqID: req_id,
                    TableType: tabletype,
                    WhoReceiver: whoreceiver
                };

                $.ajax({
                    type: "post",
                    url: '../Form/SendEmailInputProposal',
                    data: JSON.stringify(dto),
                    dataType: "json",
                    contentType: "application/json;charset=utf-8",
                    success: function (data) {
                        
                        toastr.success("Email Sent Successfully !", "Notification", {
                            "closeButton": false,
                            "debug": true,
                            "newestOnTop": false,
                            "progressBar": false,
                            "positionClass": "toast-bottom-right",
                            "preventDuplicates": false,
                            "onclick": null,
                            "showDuration": "100",
                            "hideDuration": "1000",
                            "timeOut": "2000",
                            "extendedTimeOut": "1000",
                            "showEasing": "swing",
                            "hideEasing": "linear",
                            "showMethod": "fadeIn",
                            "hideMethod": "fadeOut"
                        })
                       
                    }, error: function (ex) {
                        GetErrorQMAppProp("PICPropNotifyApp", JSON.stringify(ex));
                    }
                });
            }

            $.when(ApproveProposal()).done(NotifyProposal());
        }

        function RejectPIC(button) {
            Swal.fire({
			title: 'Reason???',
			input: 'text',
			inputAttributes: {
				autocapitalize: 'off'
			},
			showCancelButton: true,
			confirmButtonText: 'Submit',
			showLoaderOnConfirm: true,

			allowOutsideClick: () => Swal.isLoading()
		    }).then((result) => {
                if (result.value == null || result.value == '') {
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: 'Please Insert Reason!'
                    });
                } else if (result.isConfirmed) {

                    var row = $(button).closest("TR");

                    var no_disposisi = $("TD", row).eq(8).html();
                    var req_id = @ViewBag.nomor;
                    var curr_user = '@Request.RequestContext.HttpContext.Session["xUser"]';
                    var receiver = $("TD", row).eq(8).html();
                    var alasanReject = result.value;

                    var dto = {
                        REQID: req_id,
                        NO_DISPOSISI: no_disposisi,
                        IDUSER: curr_user,
                        ALASAN_REJECT:alasanReject
                    }

                    $.ajax({
                        url: "../QualityManager/QM_RejectPIC",
                        type: "post",
                        dataType: "json",
                        data: JSON.stringify(dto),
                        contentType: "application/json;charset=utf-8",
                        success: function (data) {
                            Swal.fire({
                                title: 'Revisi Disposisi Rejected',
                                showDenyButton: false,
                                showCancelButton: false,
                                confirmButtonText: `OK`
                            });                            

                            LoadData();
                        }
                        , error: function (ex) {
                            GetErrorQMAppProp("PICPropQM_RejectPIC", JSON.stringify(ex));
                        }
                    });

                    

                    var tabletype = "One";
                    var whoreceiver = "Reviewer Rejected Usulan Revisi";

                    var dto = {
                        Receiver: receiver,
                        ReqID: REQID,
                        TableType: tabletype,
                        WhoReceiver: whoreceiver
                    };

                    $.ajax({
                        type: "post",
                        url: '../Form/SendEmailInputProposal',
                        data: JSON.stringify(dto),
                        dataType: "json",
                        contentType: "application/json;charset=utf-8",
                        success: function (data) {
                            toastr.success("Email Sent Successfully !", "Notification", {
                                "closeButton": false,
                                "debug": true,
                                "newestOnTop": false,
                                "progressBar": false,
                                "positionClass": "toast-bottom-right",
                                "preventDuplicates": false,
                                "onclick": null,
                                "showDuration": "100",
                                "hideDuration": "1000",
                                "timeOut": "1000",
                                "extendedTimeOut": "1000",
                                "showEasing": "swing",
                                "hideEasing": "linear",
                                "showMethod": "fadeIn",
                                "hideMethod": "fadeOut"
                            });
                        }, error: function (ex) {
                            GetErrorQMAppProp("PICPropNotifyRej", JSON.stringify(ex));
                        }
                    });
                }
		    });
        }

        function GetErrorQMAppProp(ErrorType, ErrorMsg) {
		var REQID = @ViewBag.nomor;
		var USERNIK = '@Request.RequestContext.HttpContext.Session["xUser"]';

		var dto = {
			REQ_ID: REQID,
			UserLogin: USERNIK,
            ErrorType: ErrorType,
            ErrorMsg: ErrorMsg
		}

		$.ajax({
			url: "../Form/LogError",
			type: "post",
			dataType: "json",
			data: JSON.stringify(dto),
			contentType: "application/json;charset=utf-8",
			success: function (data) {
                toastr.warning(data +" Assign ! ", "Notification", {
                    "closeButton": false,
                    "debug": true,
                    "newestOnTop": false,
                    "progressBar": false,
                    "positionClass": "toast-bottom-right",
                    "preventDuplicates": false,
                    "onclick": null,
                    "showDuration": "200",
                    "hideDuration": "1000",
                    "timeOut": "1000",
                    "extendedTimeOut": "1000",
                    "showEasing": "swing",
                    "hideEasing": "linear",
                    "showMethod": "fadeIn",
                    "hideMethod": "fadeOut"
                });
			}
			, error: function (ex) {

			}
		});
	}
    </script>
</body>




